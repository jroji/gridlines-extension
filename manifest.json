{
  "manifest_version": 2,

  "name": "Gridlines",
  "description": "Show gridlines",
  "version": "1.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["popup.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab","tabs"
  ]
}
